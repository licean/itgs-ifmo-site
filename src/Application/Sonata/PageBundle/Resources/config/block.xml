<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
		   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
		<parameter key="sonata.page.block.mainmenu.class">Application\Sonata\PageBundle\Block\MainMenuBlockService</parameter>
	</parameters>

	<services>
		<service id="sonata.page.block.mainmenu" class="%sonata.page.block.mainmenu.class%">
			<tag name="sonata.block" />
			<argument>sonata.page.block.mainmenu</argument>
			<argument type="service" id="templating" />
			<argument type="service" id="sonata.page.site.selector" />
			<argument type="service" id="sonata.page.cms_manager_selector" />
		</service>
	</services>
</container>
